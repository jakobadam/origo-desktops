#!/bin/sh
### BEGIN INIT INFO
# Provides: gunicorn
# Required-Start: $all
# Required-Stop: $all
# Default-Start: 2 3 4 5
# Default-Stop: 0 1 6
# Short-Description: starts the gunicorn server
# Description: starts gunicorn using start-stop-daemon
### END INIT INFO

PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
DESC=gunicorn
DAEMON=/usr/local/bin/gunicorn
NAME=gunicorn
USER=www-data
GROUP=www-data
ROOT=/srv/www/rds
PIDFILE=/var/run/gunicorn/gunicorn.pid
LOGFILE=/var/log/gunicorn/gunicorn.log
PORT=8000
WORKERS=1
SCRIPTNAME=/etc/init.d/$NAME
APP_MODULE='rds.wsgi:application'

[ -x "$DAEMON" ] || exit 0
[ ! -d /var/run/gunicorn ] && mkdir /var/run/gunicorn && chown www-data: /var/run/gunicorn
[ ! -d /var/log/gunicorn ] && mkdir /var/log/gunicorn && chown www-data: /var/log/gunicorn

start () {
    ARGS="--start --chuid $USER:$GROUP --chdir $ROOT --pidfile $PIDFILE --background --exec $DAEMON"
    DAEMON_ARGS="$APP_MODULE -b 127.0.0.1:$PORT -p $PIDFILE --log-file $LOGFILE"
    start-stop-daemon $ARGS --test > /dev/null || return 1
    start-stop-daemon $ARGS -- $DAEMON_ARGS || return 2
}

stop () {
    ARGS="--stop --quiet --retry=TERM/30/KILL/5 --pidfile $PIDFILE --name $NAME"
    start-stop-daemon $ARGS
    RETVAL="$?"
    [ "$RETVAL" = 2 ] && return 2
    start-stop-daemon --stop --quiet --oknodo --retry=0/30/KILL/5 --exec $DAEMON
    [ "$?" = 2 ] && return 2
    rm -f $PIDFILE
    return "$RETVAL"
}

case "$1" in
  start)
                echo "Starting $DESC"
                start
                ;;
  stop)
                echo "Stopping $DESC"
                stop
                ;;
  restart)
                echo "Restarting $DESC"
                stop
                sleep 1
                start
                ;;
  *)
                echo "Usage: $SCRIPTNAME {start|stop|restart}" >&2
                exit 1
                ;;
esac

exit 0
